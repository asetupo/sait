from flask import Flask, render_template, request
import random
import string

app = Flask(__name__)

def generate_password(length=12, include_upper=True, include_digits=True, include_special=True):
    characters = string.ascii_lowercase
    if include_upper:
        characters += string.ascii_uppercase
    if include_digits:
        characters += string.digits
    if include_special:
        characters += "!@#$%^&*()-_=+[]{}|;:,.<>?/"

    password = ''.join(random.choice(characters) for _ in range(length))
    return password

@app.route('/', methods=['GET', 'POST'])
def index():
    password = ''
    if request.method == 'POST':
        length = int(request.form.get('length', 12))
        include_upper = 'include_upper' in request.form
        include_digits = 'include_digits' in request.form
        include_special = 'include_special' in request.form
        password = generate_password(length, include_upper, include_digits, include_special)
    return render_template('index.html', password=password)

if __name__ == '__main__':
    app.run(debug=True)
