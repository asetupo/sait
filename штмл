    {% if password %}
        <h2>Ваш пароль:</h2>
        <p><strong>{{ password }}</strong></p>
        <button onclick="copyPassword()">Копировать пароль</button>
    {% endif %}

    <script>
        function copyPassword() {
            const passwordText = document.querySelector('strong');
            navigator.clipboard.writeText(passwordText.innerText)
                .then(() => alert('Пароль скопирован!'))
                .catch(() => alert('Не удалось скопировать!'));
        }
    </script>
